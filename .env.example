# Weather Routing Tool - Environment Configuration Example
# Copy this file to .env and fill in your values

# Routing Configuration
WRT_ALGORITHM_TYPE=isofuel
WRT_BOAT_TYPE=direct_power_method
WRT_ROUTE_PATH=/path/to/output

# Data Sources
WRT_WEATHER_DATA=/path/to/weather.nc
WRT_DEPTH_DATA=/path/to/depth.nc

# Forecast Parameters
WRT_DELTA_TIME_FORECAST=3
WRT_TIME_FORECAST=90

# Database Configuration (for seamarks/land polygons constraints)
WRT_DB_HOST=localhost
WRT_DB_PORT=5432
WRT_DB_DATABASE=wrt_db
WRT_DB_USERNAME=your_username
WRT_DB_PASSWORD=your_password
POSTGRES_SCHEMA=public
